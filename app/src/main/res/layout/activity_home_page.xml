<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bhagya.mapapplication.activityclass.homePage">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/contacts"

            android:gravity="center"
            android:background="@drawable/ans_question_background"
            android:drawableTop="@drawable/ic_people_black_24dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="Contacts"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    <Button android:id="@+id/inoutsms"
        android:fadingEdgeLength="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ans_question_background"
        android:drawableTop="@drawable/sms"
        android:textSize="30dp"
        android:textColor="#fff"
        android:text="Message"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/Computer"
            android:layout_marginTop="20dp"
            android:fadingEdgeLength="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/ans_question_background"
            android:drawableTop="@drawable/phone"
            android:textSize="30dp"
            android:textColor="#fff"
            android:text="MMC"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button android:id="@+id/Gaming"
            android:layout_marginTop="20dp"
            android:fadingEdgeLength="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ans_question_background"
            android:drawableTop="@drawable/game"
            android:textSize="30dp"
            android:textColor="#fff"
            android:text="Game"
            android:layout_width="100dp"
            android:layout_height="100dp" />


    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


</LinearLayout>
