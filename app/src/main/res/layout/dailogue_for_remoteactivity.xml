<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/customedailoge"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info"
            android:text="Send Request Through...."
            android:textColor="#fff"
            android:layout_above="@+id/yesno"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="350dp"
            android:id="@+id/yesno"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button android:id="@+id/Online"
                android:text="Internet"
                android:textStyle="bold"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="@drawable/ans_question_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button android:id="@+id/yes"
                android:text="SMS"
                android:textStyle="bold"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="@drawable/ans_question_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>