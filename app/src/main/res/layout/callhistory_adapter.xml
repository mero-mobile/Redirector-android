<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#313131"
    android:alpha="1.0"
    android:layout_height="match_parent">
<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/contactimage"
        android:layout_width="100dp"
        app:srcCompat="@drawable/contact"
        android:layout_height="100dp" />
    <TextView android:id="@+id/contactname"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/contactimage"
        android:text="Bhagya Sah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/date"
        android:text="date"
        android:layout_toRightOf="@id/contactname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/phonenumber"
        android:text="9801074961"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/contactimage"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/contactname"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatImageView android:id="@+id/call_histry"
        app:srcCompat="@drawable/ic_phone_black_24dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@id/phonenumber"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView android:id="@+id/duration"
        android:text="duration"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/calltype1"
        android:text="call type"
        android:textColor="#f00"
        android:layout_toRightOf="@id/phonenumber"
        android:layout_above="@id/call_histry"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatImageView app:srcCompat="@drawable/ic_chat_black_24dp"
        android:layout_toRightOf="@id/call_histry"
        android:id="@+id/sms_histry"
        android:layout_below="@id/phonenumber"
        android:layout_marginLeft="40dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>
</RelativeLayout>