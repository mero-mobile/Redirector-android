<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_facebook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context="com.bhagya.mapapplication.activityclass.UserProfile">



    <TextView android:id="@+id/fb_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView android:id="@+id/profile_pics"
        android:src="@mipmap/mainlogo"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <Button android:id="@+id/logout"
        android:text="logout gogole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:id="@+id/google_signin"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

    </com.google.android.gms.common.SignInButton>


</LinearLayout>
