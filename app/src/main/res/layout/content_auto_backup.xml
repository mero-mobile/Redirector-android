<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bhagya.mapapplication.activityclass.AutoBackupActivity"
    tools:showIn="@layout/activity_auto_backup">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Backup on wifi..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Contacts"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
    <CheckBox
        android:layout_marginLeft="10dp"
        android:id="@+id/wifi_checkcontacts"
        android:layout_width="40dp"
        android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Call History"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:id="@+id/wifi_callhistorychek"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Inbox"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:id="@+id/wifi_inboxchek"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Outbox"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:id="@+id/wifi_outboxcheck"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Backup on mobile data..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Contacts"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/mobiledata_contacts"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Call History"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/mobiledata_callhistorychek"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Inbox"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/mobiledata_inboxchek"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="Outbox"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:id="@+id/mobiledata_outboxcheck"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
