<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_backiup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bhagya.mapapplication.BackiupActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

    <Button android:id="@+id/backup"
        android:layout_marginLeft="50dp"
        android:drawableTop="@drawable/backup"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fff"
        android:text="Backup Your Phone"
        android:background="@drawable/ans_question_background"
        android:layout_width="250dp"
        android:layout_height="80dp" />
    <Button android:id="@+id/mainmenu"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:drawableRight="@drawable/forward"
        android:textColor="#fff"
        android:text=" Main Menu"
        android:background="@drawable/ans_question_background"
        android:layout_width="250dp"
        android:layout_height="80dp" />
</LinearLayout>
    </LinearLayout>

</LinearLayout>
